<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lizmcarney.googleglassquiz"
    android:versionCode="1"
    android:versionName="1.0"
    >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19"
        />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_main_icon"
        android:label="@string/app_name"
        >

        <activity android:name="com.lizmcarney.googleglassquiz.StartActivity">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_trigger_play_a_game"
                />
        </activity>

        <activity android:name="com.lizmcarney.googleglassquiz.TraditionalQuizActivity" />
        
        <activity android:name="com.lizmcarney.googleglassquiz.TimedQuizActivity" />

        <activity android:name="com.lizmcarney.googleglassquiz.TutorialActivity" />

        <activity android:name="com.lizmcarney.googleglassquiz.ResultsActivity" />

    </application>

</manifest>
